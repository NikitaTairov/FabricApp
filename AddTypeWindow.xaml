<Window x:Class="FabricApp.AddTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить вид товара" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Наименование вида товара" />
            <TextBox Name="TypeNameBox" Width="250" />
        </StackPanel>

        <Button Grid.Row="1" Content="Сохранить" Click="Save_Click" Width="100" Margin="0 20 0 0" HorizontalAlignment="Right" />
    </Grid>
</Window>